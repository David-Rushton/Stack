root = true

[*]
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
charset = utf-8
end_of_line = lf

# Let Go do its thing.
[*.go]
trim_trailing_whitespace = unset
insert_final_newline = unset
indent_style = unset
charset = unset
end_of_line = unset

[*.md]
trim_trailing_whitespace = false